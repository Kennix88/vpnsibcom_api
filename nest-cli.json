{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "core/i18n/locales/**/*",
        "outDir": "dist"
      },
      {
        "include": "core/i18n/i18n.type.ts",
        "outDir": "dist"
      }
    ],
    "watchAssets": true
  }
}
