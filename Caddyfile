# Перенаправление с www на основной домен
www.fasti.fun {
    redir https://fasti.fun{uri} permanent
}

# Основной фронтенд
fasti.fun {
    root * /usr/share/nginx/html
    file_server

    reverse_proxy frontend:3000 {
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto {scheme}
        transport http {
            keepalive 30s
            response_header_timeout 30s
            read_timeout 30s
            write_timeout 30s
            dial_timeout 30s
        }
    }

    encode gzip zstd

    log {
        output file /var/log/caddy/access.log
        format json
    }

    header {
        X-Frame-Options "SAMEORIGIN"
        X-XSS-Protection "1; mode=block"
        X-Content-Type-Options "nosniff"
        Content-Security-Policy "default-src 'self'; img-src 'self' data:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'; connect-src 'self' fasti.fun; frame-ancestors 'self';"
        Referrer-Policy "strict-origin-when-cross-origin"
        -Server
    }

    tls {
        protocols tls1.2 tls1.3
    }
}

# API backend
api.fasti.fun {
    reverse_proxy api:4000 {
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto {scheme}
        transport http {
            keepalive 30s
            response_header_timeout 30s
            read_timeout 30s
            write_timeout 30s
            dial_timeout 30s
        }
    }

    encode gzip zstd

    log {
        output file /var/log/caddy/api.log
        format json
    }

    header {
        X-Frame-Options "SAMEORIGIN"
        X-XSS-Protection "1; mode=block"
        X-Content-Type-Options "nosniff"
        Content-Security-Policy "default-src 'self'; img-src 'self' data:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'; connect-src 'self' api.fasti.fun; frame-ancestors 'self';"
        Referrer-Policy "strict-origin-when-cross-origin"
        -Server
    }
}

